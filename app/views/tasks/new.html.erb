<h1>New task</h1>
<%= form_with model: @task do |f| %>
  <div class="form-group my-5">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group my-5">
    <%= f.label :details %>
    <%= f.text_field :details, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
<hr>
<p><%= link_to("Back to list", tasks_path) %></p>
